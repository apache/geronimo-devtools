<project default="default"
    xmlns:j="jelly:core"
    xmlns:ant="jelly:ant">
    
    <goal name="init">
        <mkdir dir="${distribution.dir}"/>
    </goal>

    <goal name="default">
        <attainGoal name="build"/>
    </goal>
    
    <goal name="jar:install">
        <attainGoal name="build"/>
    </goal>

    <goal name="build">
        <attainGoal name="zipdistro"/>
        <attainGoal name="sitedistro"/>
    </goal>

    <goal name="rebuild">
        <attainGoal name="clean"/>
        <attainGoal name="build"/>
    </goal>

    <goal name="zipdistro" prereqs="init">   
        <ant:delete dir="${distribution.dir.temp}"/>
        <ant:echo>Packaging feature for zip distribution</ant:echo>
        <j:forEach var="artifact" items="${pom.artifacts}">        
            <j:set var="dependency" value="${artifact.dependency}"/>  
            <pathconvert property="version">
                <path path="${dependency.version}"/>
                <chainedmapper>
                    <flattenmapper/>
                    <globmapper from="*-SNAPSHOT" to="*"/>
                </chainedmapper>
            </pathconvert>      
            <j:if test="${dependency.getProperty('zipdistro') == 'true'}">
                <echo>Processing ${dependency.artifactId}</echo>  
                <j:if test="${dependency.getProperty('feature') == 'true'}">
                    <ant:unjar src="${artifact.path}" dest="${distribution.dir.temp}/features/${dependency.artifactId}_${version}"/>
                </j:if> 
            
                <j:if test="${dependency.getProperty('jar') == 'true'}"> 
                    <ant:copy file="${artifact.path}" tofile="${distribution.dir.temp}/plugins/${dependency.artifactId}_${version}.jar" overwrite="true"/>
                </j:if> 
            
                <j:if test="${dependency.getProperty('jar') == 'false'}">  
                    <ant:unjar src="${artifact.path}" dest="${distribution.dir.temp}/plugins/${dependency.artifactId}_${version}"/>
                </j:if>   
            </j:if>                        
        </j:forEach>               
        <ant:zip destfile="${distribution.dir}/geronimo-eclipse-plugin-${zipdistribution_version}.zip" basedir="${distribution.dir.temp}"/> 
        <checksum file="${distribution.dir}/geronimo-eclipse-plugin-${zipdistribution_version}.zip" algorithm="MD5" fileext=".md5"/>
        <checksum file="${distribution.dir}/geronimo-eclipse-plugin-${zipdistribution_version}.zip" algorithm="SHA" fileext=".sha"/>    
    </goal>  
    
    <goal name="sitedistro" prereqs="init">
       <ant:echo>Packaging feature for update site</ant:echo>  
        <ant:delete dir="${distribution.dir}/updates"/>
        <j:forEach var="artifact" items="${pom.artifacts}">        
            <j:set var="dependency" value="${artifact.dependency}"/>  
            <pathconvert property="version">
                <path path="${dependency.version}"/>
                <chainedmapper>
                    <flattenmapper/>
                    <globmapper from="*-SNAPSHOT" to="*"/>
                </chainedmapper>
            </pathconvert>         
            <j:if test="${dependency.getProperty('feature') == 'true'}">
                <echo>Processing ${dependency.artifactId}</echo>  
                <ant:copy file="${artifact.path}" tofile="${distribution.dir.updatesite}/features/${dependency.artifactId}_${version}.jar" overwrite="true"/>
                <checksum file="${distribution.dir.updatesite}/features/${dependency.artifactId}_${version}.jar" algorithm="MD5" fileext=".md5" />
                <checksum file="${distribution.dir.updatesite}/features/${dependency.artifactId}_${version}.jar" algorithm="SHA" fileext=".sha"/>
            </j:if> 
            
            <j:if test="${dependency.getProperty('jar') == 'true' || dependency.getProperty('jar') == 'false'}"> 
                <echo>Processing ${dependency.artifactId}</echo>  
                <ant:copy file="${artifact.path}" tofile="${distribution.dir.updatesite}/plugins/${dependency.artifactId}_${version}.jar" overwrite="true"/>
                <checksum file="${distribution.dir.updatesite}/plugins/${dependency.artifactId}_${version}.jar" algorithm="MD5" fileext=".md5"/>
                <checksum file="${distribution.dir.updatesite}/plugins/${dependency.artifactId}_${version}.jar" algorithm="SHA" fileext=".sha"/>
            </j:if>                
        </j:forEach>
        <echo>Getting site.xml</echo>  
        <ant:exec dir="${basedir}" executable="svn" output="${distribution.dir.updatesite}/site.xml">
            <ant:arg line="cat https://svn.apache.org/repos/asf/geronimo/site/docs/devtools/site.xml"/>
        </ant:exec>  
    </goal>
    
</project>
