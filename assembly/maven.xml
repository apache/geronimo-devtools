<project default="default"
    xmlns:j="jelly:core"
    xmlns:ant="jelly:ant">

    <goal name="default">
        <attainGoal name="build"/>
    </goal>
    
    <goal name="jar:install">
        <attainGoal name="build"/>
    </goal>

    <goal name="build">
        <mkdir dir="${distribution.dir}"/>
        <attainGoal name="zipdistro"/>
        <attainGoal name="sitedistro"/>
    </goal>

    <goal name="rebuild">
        <attainGoal name="clean"/>
        <attainGoal name="build"/>
    </goal>

    <goal name="zipdistro">   
        <ant:echo>Packaging feature for zip distribution</ant:echo>    
        <j:forEach var="artifact" items="${pom.artifacts}">        
            <j:set var="dependency" value="${artifact.dependency}"/>           
            
            <j:if test="${dependency.getProperty('feature') == 'true'}">  
                <ant:unjar src="${artifact.path}" dest="${distribution.dir.temp}/features/${dependency.artifactId}_${distributionjarversion}"/>
            </j:if> 
            
            <j:if test="${dependency.getProperty('jar') == 'true'}">  
                <ant:copy file="${artifact.path}" tofile="${distribution.dir.temp}/plugins/${dependency.artifactId}_${distributionjarversion}.jar"/>
            </j:if> 
            
            <j:if test="${dependency.getProperty('jar') == 'false'}">  
                <ant:unjar src="${artifact.path}" dest="${distribution.dir.temp}/plugins/${dependency.artifactId}_${distributionjarversion}"/>
            </j:if>                        
        </j:forEach>               
        <ant:zip destfile="${distribution.dir}/geronimo-eclipse-plugin-${pom.currentVersion}.zip" basedir="${distribution.dir.temp}"/> 
        <checksum file="${distribution.dir}/geronimo-eclipse-plugin-${pom.currentVersion}.zip" algorithm="MD5" fileext=".md5"/>
        <checksum file="${distribution.dir}/geronimo-eclipse-plugin-${pom.currentVersion}.zip" algorithm="SHA" fileext=".sha"/>    
    </goal>  
    
    <goal name="sitedistro">
       <ant:echo>Packaging feature for update site</ant:echo>  
        <j:forEach var="artifact" items="${pom.artifacts}">        
            <j:set var="dependency" value="${artifact.dependency}"/>           
            
            <j:if test="${dependency.getProperty('feature') == 'true'}">  
                <ant:copy file="${artifact.path}" tofile="${distribution.dir.updatesite}/features/${dependency.artifactId}_${distributionjarversion}.jar"/>
                <checksum file="${distribution.dir.updatesite}/features/${dependency.artifactId}_${distributionjarversion}.jar" algorithm="MD5" fileext=".md5"/>
                <checksum file="${distribution.dir.updatesite}/features/${dependency.artifactId}_${distributionjarversion}.jar" algorithm="SHA" fileext=".sha"/>
            </j:if> 
            
            <j:if test="${dependency.getProperty('jar') == 'true' || dependency.getProperty('jar') == 'false'}">  
                <ant:copy file="${artifact.path}" tofile="${distribution.dir.updatesite}/plugins/${dependency.artifactId}_${distributionjarversion}.jar"/>
                <checksum file="${distribution.dir.updatesite}/plugins/${dependency.artifactId}_${distributionjarversion}.jar" algorithm="MD5" fileext=".md5"/>
                <checksum file="${distribution.dir.updatesite}/plugins/${dependency.artifactId}_${distributionjarversion}.jar" algorithm="SHA" fileext=".sha"/>
            </j:if>                      
        </j:forEach>  
        <ant:zip destfile="${distribution.dir}/geronimo-update-${pom.currentVersion}.zip" basedir="${distribution.dir}"/>
        <checksum file="${distribution.dir}/geronimo-update-${pom.currentVersion}.zip" algorithm="MD5" fileext=".md5"/>
        <checksum file="${distribution.dir}/geronimo-update-${pom.currentVersion}.zip" algorithm="SHA" fileext=".sha"/>    
    </goal>
     
</project>
