<!-- @version $Rev$ $Date$ -->

<project>
                                                
    <modelVersion>4.0.0</modelVersion>
                                                
    <groupId>org.apache.geronimo.devtools</groupId>
    <artifactId>testsuite-server</artifactId>
    <packaging>pom</packaging>
    <version>2.1.2</version>
    <name>Geronimo Eclipse Plugin :: Testsuite :: Server</name>
                                                
    <parent>
        <groupId>org.apache.geronimo.devtools</groupId>
        <artifactId>testsuite</artifactId>
        <version>2.1.2</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-geronimo-server</id>
                        <phase>validate</phase>
                        <configuration>
                            <tasks>
                                <!--
                                 |
                                 | Unzip and rename the testsuite Geronimo server
                                 |
                                 -->
                                <property name="geronimo_install"       value="${basedir}/../launcher/"/>
                                <property name="geronimo_assembly"      value="org/apache/geronimo/assemblies"/>
                                <property name="geronimo_name"          value="geronimo-tomcat6-javaee5"/>
                                <property name="geronimo_version"       value="2.1.2-SNAPSHOT"/>
                                <mkdir dir="${geronimo_install}"/>
                                <unzip src="${settings.localRepository}/${geronimo_assembly}/${geronimo_name}/${geronimo_version}/${geronimo_name}-${geronimo_version}-bin.zip"
                                      dest="${geronimo_install}"/>
                                <move todir="${geronimo_install}server">
                                    <fileset dir="${geronimo_install}/${geronimo_name}-${geronimo_version}"/>
                                </move>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
                                                
</project>
