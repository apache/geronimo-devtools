    </dependency>
    <dependency>
      <groupId>org.eclipse.plugins</groupId>
      <artifactId>org.eclipse.wst.server.ui</artifactId>
      <version>${org.eclipse.wst.server.ui_version}</version>
    </dependency>
    <dependency>
