    </dependency>
    <dependency>
      <groupId>org.eclipse.plugins</groupId>
      <artifactId>org.eclipse.ui.workbench</artifactId>
      <version>${org.eclipse.ui.workbench_version}</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.plugins</groupId>
      <artifactId>org.eclipse.core.commands</artifactId>
      <version>${org.eclipse.core.commands_version}</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.plugins</groupId>
