<project>
  <modelVersion>4.0.0</modelVersion>
	<artifactId>org.apache.geronimo.ui</artifactId>
  <packaging>jar</packaging>
  <version>${org.apache.geronimo.ui_version}</version>
  <name>Geronimo Eclipse Plugin :: Plugin :: ${artifactId}</name>
  <parent>
    <groupId>org.apache.geronimo.devtools</groupId>
    <artifactId>geronimo-eclipse-plugin</artifactId>
    <version>1.0</version>
  </parent>
  <build>
    <resources>
      <resource>
        <directory>.</directory>
        <includes>
          <include>plugin.xml</include>
        </includes>
      </resource>      
      <resource>
        <targetPath>org/apache/geronimo/ui/internal</targetPath>
        <directory>src/org/apache/geronimo/ui/internal</directory>
        <includes>
          <include>Messages.properties</include>
        </includes>
      </resource>
      <resource>
        <targetPath>icons</targetPath>
        <directory>icons</directory>
        <includes>
          <include>**/*.gif</include>
        </includes>
      </resource>
      <resource>
        <directory>.</directory>
        <includes>
          <include>plugin.properties</include>
        </includes>
      </resource>
       <resource>
        <directory>.</directory>
        <includes>
          <include>.options</include>
        </includes>
      </resource>
    </resources>
  </build>
  <dependencies>
    <!-- g plugin dependencies -->
    <dependency>
      <groupId>org.apache.geronimo.devtools</groupId>
      <artifactId>org.apache.geronimo.devtools.eclipse.core</artifactId>
      <version>${org.apache.geronimo.devtools.eclipse.core_version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.devtools</groupId>
      <artifactId>org.apache.geronimo.deployment.model.edit</artifactId>
      <version>${org.apache.geronimo.deployment.model.edit_version}</version>
    </dependency>
    <!-- eclipse plugin dependencies -->
    <dependency>
      <groupId>org.eclipse.plugins</groupId>
      <artifactId>org.eclipse.swt.fragment</artifactId>
      <version>${org.eclipse.swt.fragment_version}</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.plugins</groupId>
      <artifactId>org.eclipse.jface</artifactId>
      <version>${org.eclipse.jface_version}</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.plugins</groupId>
      <artifactId>org.eclipse.ui</artifactId>
      <version>${org.eclipse.ui_version}</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.plugins</groupId>
      <artifactId>org.eclipse.ui.browser</artifactId>
      <version>${org.eclipse.ui.browser_version}</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.plugins</groupId>
      <artifactId>org.eclipse.ui.editors</artifactId>
      <version>${org.eclipse.ui.editors_version}</version>
    </dependency>
    <dependency>
