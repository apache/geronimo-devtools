    <org.eclipse.emf.ecore_version>${emfVersion}</org.eclipse.emf.ecore_version>
    <org.eclipse.emf.ecore.edit_version>${emfVersion}</org.eclipse.emf.ecore.edit_version>
    <org.eclipse.emf.edit_version>${emfVersion}</org.eclipse.emf.edit_version>
    <org.eclipse.emf.edit.ui_version>${emfVersion}</org.eclipse.emf.edit.ui_version>
    <org.eclipse.emf.ecore.xmi_version>${emfVersion}</org.eclipse.emf.ecore.xmi_version>
